<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="45" android:centerColor="@color/gray_push_center" android:centerX="0" android:centerY="0" android:endColor="@color/gray_push_end"/>
                    <corners android:radius="11dp" />
                    <stroke android:width="1dp" android:color="@color/button_stroke" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="45" android:centerColor="@color/gray_center" android:centerX="0" android:centerY="0" android:endColor="@color/gray_end" />
                    <corners android:radius="11dp" />
                    <stroke android:width="1dp" android:color="@color/button_stroke" />
                </shape>
            </item>
        </layer-list>        
    </item>

</selector>